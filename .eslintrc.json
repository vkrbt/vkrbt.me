{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "svelte3"
    ],
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "processor": "svelte3/svelte3"
        }
    ],
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module"
    },
    "rules": {
        "import/no-mutable-exports": 0,
        "import/prefer-default-export": 0,
        "prefer-const": 0,
        "object-curly-spacing": 0,
        "no-mixed-operators": 0,
        "indent": ["error", 4]
    }
}
